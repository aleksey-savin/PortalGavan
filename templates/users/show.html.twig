{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h1>{{ user.realName }}</h1>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>E-mail</td>
                            <td>{{ user.userName }}</td>
                        </tr>
                        <tr>
                            <td>Роль</td>
                            {% if user.role == 'ROLE_ADMIN' %}
                            <td>Администратор</td>
                            {% elseif user.role == 'ROLE_GUIDE' %}
                            <td>Гид</td>
                            {% endif %}
                        </tr>
                        <tr>
                            <td>Номер ПЛОТ</td>
                            <td>{{ user.PLOTNumber }}</td>
                        </tr>
                    </tbody>
                 </table>
                 <hr>
                 <a href="/users/edit/{{ user.id }}" class="btn btn-success">Изменить</a>
                 <a href="/users_list"class="btn btn-secondary">Назад</a>
                <hr>
            </div>
        </div>
    </div>
{% endblock %}
