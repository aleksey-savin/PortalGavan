{% extends 'base.html.twig' %}

{% block title %}Редактирование покупки{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                {{ form_start(purchase) }}
                <p>{{ form_row(purchase.tradePoint) }}</p>
                <p>{{ form_row(purchase.commission) }}</p>
                <p>{{ form_row(purchase.salesReceipt) }}</p>
                <p>{{ form_row(purchase.date) }}</p>
                <p>{{ form_row(purchase.groupLeaderCommissionValue) }}</p>
                <p>{{ form_row(purchase.guideCommissionValue) }}</p>
                <p>{{ form_row(purchase.companyCommissionValue) }}</p>
                <hr>
                <div class="container">
                    <div class="row">
                        {{ form_row(purchase.save) }}
                    </div>
                </div>
                {{ form_end(purchase) }}
            </div>
        </div>
    </div>
{% endblock %}


