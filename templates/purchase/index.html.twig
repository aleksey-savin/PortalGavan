{% extends 'base.html.twig' %}

    {% block body %}
        <a href="{{ path('purchase') }}/new" class="btn btn-success">Новая покупка</a>
        <hr>
        <h1>Список покупок</h1>

        {% if purchase %}
            <table id="purchases" class="table table-striped table-bordered">
                <thead class="thead-light">
                <th>Комиссия руководителя группы</th>
                <th>Комиссия гида</th>
                <th>Комиссия компании</th>
                <th>Действия</th>
                </thead>
                <tbody>
                {% for p in purchase %}
                    <tr>
                        <td>{{ p.groupLeaderCommissionValue|localizedcurrency('RUB') }}</td>
                        <td>{{ p.guideCommissionValue|localizedcurrency('RUB') }}</td>
                        <td>{{ p.companyCommissionValue|localizedcurrency('RUB') }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop1" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Действия
                                </button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                    <a class="dropdown-item" href="/purchase/{{ p.id }}">Просмотр</a>
                                    <a class="dropdown-item delete-purchase" href="#" data-id="{{ p.id }}">Удалить</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Покупки отсутствуют</p>
        {% endif %}
    {% endblock %}
