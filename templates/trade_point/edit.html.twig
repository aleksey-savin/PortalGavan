{% extends 'base.html.twig' %}

{% block title %}Редактирование магазина{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                {{ form_start(trade_point) }}
                <p>{{ form_row(trade_point.name) }}</p>
                <p>{{ form_row(trade_point.address) }}</p>
                <p>{{ form_row(trade_point.contactPerson) }}</p>
                <p>{{ form_row(trade_point.contactNumber) }}</p>
                <p>{{ form_row(trade_point.reportsFormat) }}</p>
                <p>{{ form_row(trade_point.note) }}</p>
                <div class="container">
                    <div class="row">
                        {{ form_row(trade_point.save) }}
                        <div style="margin: 1rem"><a href="/trade_point" class="btn btn-secondary">Назад</a></div>
                    </div>
                </div>
                {{ form_end(trade_point) }}
            </div>
        </div>
    </div>
{% endblock %}


