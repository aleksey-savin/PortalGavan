{% extends 'base.html.twig' %}


{% block body %}
    <a href="/commission/new" class="btn btn-success">Новая комиссия</a>
    <hr>
    <h1>Список комиссий</h1>

    {% if commission %}
        <table id="standard-table" class="table table-striped table-bordered">
            <thead class="thead-light">
            <th>Магазин</th>
            <th>Наименование комиссии</th>
            <th>Тип комиссии</th>
            <th>Общая комиссия</th>
            <th>Общая комиссия (информация для гида)</th>
            <th>Комиссия руководителя группы</th>
            <th>Комиссия гида</th>
            <th>Комиссия компании</th>
            </thead>
            <tbody>
            {% for c in commission %}
                <tr>
                    <td>{{ c.tradePointId.name }}</td>
                    <td><a href="/commission/{{ c.id }}">{{ c.name }}</a></td>
                    <td>{{ c.type }}</td>
                    <td>{{ c.totalCommissionPct|localizednumber('percent') }}</td>
                    <td>{{ c.ftotalCommissionPct|localizednumber('percent') }}</td>
                    <td>{{ c.groupLeaderCommissionPct|localizednumber('percent') }}</td>
                    <td>{{ c.guideCommissionPct|localizednumber('percent') }}</td>
                    <td>{{ c.companyCommissionPct|localizednumber('percent') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Комиссии отсутствуют</p>
    {% endif %}
{% endblock %}